{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"],
      "_/*": ["tests/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "es2017"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
